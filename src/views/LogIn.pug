doctype html
html(lang='en')
  head
      //- Website CSS style
      link(href ='css/bootstrap.min.css' type='text/css' rel='stylesheet')
      //- link(href="css/bootstrap.min.css" rel="text/css")
      //- Website Font style
      link(href ='css/bootstrap-theme.min.css' type='text/css' rel='stylesheet')
      //- my CSS file
      link(href ='css/register.css' type='text/css' rel='stylesheet')
      //- Google Fonts
      link(href ='css/register2.css' type='text/css' rel='stylesheet')
  body
    .container-fluid
      h2.text-center #{message}
      form.register-form.form-group#register-form(action='/logIn', method='post')
        .row
          .col-md-4.col-sm-4.col-lg-4
            label(for='email') EMAIL
            input.form-control#email1(name='email', type='email')
            p.validation(style='color:white ; margin-bottom: 20px; margin-left: 5px;')
        .row
          .col-md-4.col-sm-4.col-lg-4
            label(for='password') PASSWORD
            input.form-control(name='password', id='password' , type='password')
        hr
        .row
          .col-md-6.col-sm-6.col-xs-6.col-lg-6
            button.logbutton Log In
          .col-md-6.col-sm-6.col-xs-6.col-lg-6
            h4.text Don't have an account yet? <br><a href='/register'>Register now</a>
    //- jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src = 'js/jquery.min.js')
      //- Include all compiled plugins (below), or include individual files as needed
    script(src = 'js/bootstrap.min.js')
    script(src ='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.min.js')
    script(src ='http://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/additional-methods.min.js')

